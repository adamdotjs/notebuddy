<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Indie+Flower&family=Montserrat:wght@500;700&display=swap"
			rel="stylesheet"
		/>
		<link rel="stylesheet" href="css/style.css" />
		<title>NoteBuddy</title>
	</head>

	<body>
		<%- include ('partials/header.ejs') %>
		<main>
			<form action="/notes/addNote" method="POST">
				<label for="note">New note</label>
				<input type="text" id="note" name="note" required />
				<button>Add</button>
			</form>
			<div class="notes">
				<% notes.forEach(note => { %>
				<div class="note" id="<%= note._id %>" style="background-color: <%= note.color %>">
					<%= note.note %>
				</div>
				<% }) %>
			</div>
		</main>
		<script src="js/main.js"></script>
	</body>
</html>
